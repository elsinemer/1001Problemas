import java.util.Random;

public class NumerosAleatorios {
    public static void main(String[] args) {
        int[] numeros = new int[10];  // Tamaño del arreglo
        Random random = new Random();

        // Llenar el arreglo con números aleatorios entre 0 y 100
        for (int i = 0; i < numeros.length; i++) {
            numeros[i] = random.nextInt(101); // 0 a 100
        }

        // Mostrar los números generados
        System.out.print("Números generados: ");
        for (int num : numeros) {
            System.out.print(num + " ");
        }

        // Inicializar max y min con el primer elemento
        int max = numeros[0];
        int min = numeros[0];

        // Buscar el mayor y el menor
        for (int i = 1; i < numeros.length; i++) {
            if (numeros[i] > max) {
                max = numeros[i];
            }
            if (numeros[i] < min) {
                min = numeros[i];
            }
        }

        // Mostrar resultados
        System.out.println("\nNúmero más grande: " + max);
        System.out.println("Número más pequeño: " + min);
    }
}
